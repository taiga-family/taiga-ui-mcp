{
    "extends": "@taiga-ui/tsconfig",
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "checkJs": false,
        "types": ["node"],
        "typeRoots": ["node_modules/@types", "node_modules/@taiga-ui/tsconfig"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
